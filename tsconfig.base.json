{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "incremental": true,
    "baseUrl": "./packages",
    "paths": {
      "@asw-project/shared/*": ["shared/src/*"]
    }
  },
  "exclude": [
    ".eslintrc.js",
    ".prettierrc.js"
  ]
}
